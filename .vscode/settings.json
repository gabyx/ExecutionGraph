    "cmake.useCMakeServer": true,
    "cmake.preferredGenerators": [
        "Unix Makefiles",
        "Ninja"
    ],
    // "C_Cpp.clang_format_fallbackStyle": "none",
    // "C_Cpp.clang_format_style": "file",
    "editor.formatOnSave": false,
    "fileHeaderComment.parameter": {
        "*": {
            "commentbegin": "//! ",
            "commentprefix": "//! ",
            "commentend": "//! ",
            "bar": "========================================================================================",
            "header": [
                " ExecutionGraph",
                " Copyright (C) 2014 by Gabriel Nützi <gnuetzi (at) gmail (døt) com>"
            ],
            "license": [
                " This Source Code Form is subject to the terms of the Mozilla Public",
                " License, v. 2.0. If a copy of the MPL was not distributed with this",
                " file, You can obtain one at http://mozilla.org/MPL/2.0/."
            ]
        }
    },
    "fileHeaderComment.template": {
        "*": [
            "${commentbegin}${bar}",
            "${commentbegin}${header}",
            "${commentbegin}",
            "${commentbegin} @date ${date}",
            "${commentbegin} @author ${authorName}, ${authorEmail}",
            "${commentbegin}",
            "${commentbegin}${license}",
            "${commentbegin}${bar}"
        ],
        "cpp&tsHeader": [
            "${commentbegin}${bar}",
            "${commentbegin}${header}",
            "${commentbegin}",
            "${commentbegin} @date ${date}",
            "${commentbegin} @author ${authorName}, ${authorEmail}",
            "${commentbegin}",
            "${commentbegin}${license}",
            "${commentbegin}${bar}"
        ],
        ".cpp": [
            "${commentbegin}${bar}",
            "${commentbegin}${header}",
            "${commentbegin}",
            "${commentbegin} @date ${date}",
            "${commentbegin} @author ${authorName}, ${authorEmail}",
            "${commentbegin}",
            "${commentbegin}${license}",
            "${commentbegin}${bar}"
        ],
        ".hpp": [
            "${commentbegin}${bar}",
            "${commentbegin}${header}",
            "${commentbegin}",
            "${commentbegin} @date ${date}",
            "${commentbegin} @author ${authorName}, ${authorEmail}",
            "${commentbegin}",
            "${commentbegin}${license}",
            "${commentbegin}${bar}"
        ],
        ".ts": [
            "${commentbegin}${bar}",
            "${commentbegin}${header}",
            "${commentbegin}",
            "${commentbegin} @date ${date}",
            "${commentbegin} @author ${authorName}, ${authorEmail}",
            "${commentbegin}",
            "${commentbegin}${license}",
            "${commentbegin}${bar}"
        ]
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/bower_components": true,
        "**/jspm_packages": true,
        "**/node_modules": true,
    },
    "cmake.configureArgs": ["-DExecutionGraph_BUILD_TESTS=ON" 
                            "-DExecutionGraph_BUILD_GUI=ON"
                            "-DExecutionGraph_EXTERNAL_DIR=../buildExternal"]
}